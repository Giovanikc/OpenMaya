shader checker (vector uvCoord = 0, color color1 = color(1,0,0), color color2 = 0, output color outColor = 0)
{
	float s = 0.0;
	float t = 0.0;
	if( isconnected(uvCoord))
	{
		s = uvCoord[0];
		t = uvCoord[1];
	}else{
		s = u;
		t = v;
	}
	float ss = floor(s * 2);
	float tt = floor(t * 2);
    outColor = mix (color1, color2, mod(ss+tt, 2));
}
